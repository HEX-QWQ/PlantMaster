<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 选中时的状态 -->
     <!-- 设置圆角半径为10dp -->
    <item android:state_checked="true">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="#FFFFFF"/>  <!-- 背景颜色为高亮白色 -->
        </shape>
        <item android:textColor="#000000"/>  <!-- 字体颜色为黑色 -->
    </item>
    <!-- 未选中时的状态 -->
    <item>
        <shape>
            <corners android:radius="10dp"/>  <!-- 设置圆角半径为10dp -->
            <solid android:color="@android:color/transparent"/>  <!-- 背景颜色为透明 -->
        </shape>
        <item android:textColor="#808080"/>  <!-- 字体颜色为灰色 -->
    </item>
</selector>
